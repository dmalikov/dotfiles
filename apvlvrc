set fullscreen = yes

" Hide menu and toolbar
set guioptions = -mT

" Do not show content view first
set content = no

" Enable the usage of ~/.apvlvinfo
set noinfo = no

" Use visualmode to select and copy text
set visualmode = yes

" Show pages continuosly
set continuos = yes

" Hide scrollbar
set scrollbar = no

" Fit pages to window width
set zoom = fitwidth

" Reload document after 0 second
set autoreload = 0

" Enable scrolling the pages when hitting a page tail/head
set autoscrollpage = yes

" Set wrapscan to search text
set wrapscan = yes

map zz :q <CR>

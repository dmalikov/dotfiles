# enable ctrl-alt-backspace sequence
setxkbmap -option terminate:ctrl_alt_bksp

# enable keyboard layout
setxkbmap -option "" -layout "us,ru" -option grp:caps_toggle

# urxvt fonts
xset +fp /usr/share/fonts/terminus

# set up delay and rate
xset r rate 300 50

# enable right alt for xcompose
setxkbmap -option compose:ralt

# fix xcompose in gtk applications
export GTK_IM_MODULE=xim

# disable Display Power Managing Signaling
xset -dpms

# process urxvt settings
xrdb ~/.Xresources
xrdb -override ~/.Xresources.scratchpad
xrdb -override ~/.Xresources.shiva
xrdb -override ~/.Xresources.large

# run trayer
killall trayer

trayer --edge top --align left --transparent true --widthtype pixel --width 120 --heighttype pixel --height 10 --tint 0x080808 --alpha 0 --SetDockType true &

# run kbdd daemon
/usr/bin/kbdd &

# run unclutter to hide cursor
killall unclutter
unclutter &

# run ssh-agent
killall ssh-agent
eval `ssh-agent`
ssh-add ~/.ssh/id_rsa
ssh-add ~/.ssh/id_dsa

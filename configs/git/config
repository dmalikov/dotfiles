[gpg]
    program = gpg2

[merge]
    log = true
    tool = vimdiff

[alias]
    br = branch
    ci = commit
    co = checkout
    f = fetch
    h = !sh -c 'git rev-parse --show-toplevel'
    pr = pull --rebase
    rb = rebase
    rh = reset --hard
    sm = submodule

[color]
    branch = auto
    diff = auto
    status = auto
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = green
    frag = magenta
    old = blue
    new = yellow

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
    algorithm = patience
    renames = true
    tool = gvimdiff

[difftool]
    prompt = false

[branch]
    autosetuprebase = always

[status]
    submodulesummary = true

[push]
    default = current

[rerere]
    enabled = true

[fetch]
    prune = true

[help]
    autocorrect = 1

[credential]

source ~/.tmux.keybindings

bind-key -n M-n next-window
bind-key -n M-p previous-window
bind-key C-k kill-session

set -g bell-action any
set -g default-path ""
set -g default-shell /bin/zsh
set -g default-terminal "screen-256color"
set -g display-panes-time 2000
set -g history-limit 10000
set -g mouse-select-pane on
set -g pane-active-border-fg colour202
set -g set-titles on
set -g set-titles-string '[#S:#I #H] #W'
set -g status-bg default
set -g status-fg green
set -g status-interval 1
set -g status-interval 1
set -g status-justify "centre"
set -g status-justify centre
set -g status-keys vi
set -g status-left '#[bg=colour16]#[fg=colour239]#(~/.zsh/tmux get_tmux_pwd) #[bg=colour16]#[fg=colour94]#(~/.zsh/tmux git_branch) #[fg=colour232]#[bg=colour64]#(~/.zsh/tmux git_diff_insertions)#[fg=colour232]#[bg=colour172]#(~/.zsh/tmux git_diff_deletions)'
set -g status-left-length 100
set -g status-right '#[fg=colour3]#S#[fg=colour1] (#(tmux list-sessions | wc -l))#[default]'
set -g visual-activity on
set -g window-status-current-format '#[fg=colour1]#I:#[fg=colour3]#W'
set -g window-status-format '#I:#W'
set -g xterm-keys on

set -sg escape-time 0

setw -g aggressive-resize on
setw -g automatic-rename on
setw -g mode-keys vi
setw -g mode-mouse on


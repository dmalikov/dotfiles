source ~/.tmux.keybindings

bind-key -n M-n next-window
bind-key -n M-p previous-window
bind-key C-k kill-session

set -g bell-action any
set -g default-path ""
set -g default-shell /bin/zsh
set -g default-terminal "screen-256color"
set -g display-panes-time 2000
set -g history-limit 10000
set -g mouse-select-pane on
set -g pane-active-border-fg colour2
set -g set-titles on
set -g set-titles-string 'Tmux: #W'
set -g status-bg default
set -g status-fg default
set -g status-interval 1
set -g status-justify "centre"
set -g status-keys vi
set -g status-left '#[fg=colour7]#(~/.zsh/tmux get_tmux_pwd) #[fg=colour3]#(~/.zsh/tmux git_branch) #[fg=colour0]#[bg=colour2]#(~/.zsh/tmux git_diff_insertions)#[bg=colour9]#(~/.zsh/tmux git_diff_deletions)'
set -g status-left-length 300
set -g status-right '#[fg=colour3]#S'
set -g visual-activity on
set -g window-status-current-format ' #[bg=colour6]#[fg=colour0] #W #[bg=default]#[fg=default] '
set -g window-status-format '#[fg=colour6] #W #[bg=default]#[fg=default] '
set -g xterm-keys on

set -sg escape-time 0

setw -g aggressive-resize on
setw -g automatic-rename on
setw -g mode-keys vi
setw -g mode-mouse on


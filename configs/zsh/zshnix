nix_profile=~/.nix-profile/etc/profile.d/nix.sh
if [[ -e $nix_profile ]]; then
    source $nix_profile
fi

if [[ $(hostname) -ne "nixos" ]]; then
    export NIX_PATH=nixpkgs=${HOME}/git/nixpkgs/
fi

alias eix="nix-env -qaP '*' | grep"
alias ns='nix-shell --command zsh'

function ghci-ns () {
    if [[ -n "$NIX_GHC_LIBDIR" ]]; then
        ghci -isrc -package-db=$NIX_GHC_LIBDIR/package.conf.d -itest
    else
        echo "\$NIX_GHC_LIBDIR isn't set"
    fi
}

[core]
    repositoryformatversion = 0
    filemode = true
    bare = false
    logallrefupdates = true
    editor = vim
    pager = cat
    excludesfile = ~/.gitignore

[merge]
    tool = vimdiff

[alias]
    br = branch
    ci = commit
    co = checkout
    df = diff --name-only
    dt = difftool
    dw = diff --word-diff
    gg = log --graph --date-order --pretty=format:\"<%h> %ad [%an] %Cgreen%d%Creset %s\" --date=short -n 50
    lg = log -p
    sm = submodule
    st = status -uno
    us = reset HEAD --

[color]
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = green
    frag = magenta
    old = blue
    new = yellow

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[gitflow "branch"]
    master = master
    develop = develop

[gitflow "prefix"]
    feature = feature/
    release = release/
    hotfix = hotfix/
    support = support/
    versiontag =

[cola]
    fontdiff = Terminus,8,-1,5,50,0,0,0,0,0

[gui]
    editor = gvim

[diff]
    tool = gvimdiff

[difftool]
    prompt = false

[branch]
    autosetuprebase = always

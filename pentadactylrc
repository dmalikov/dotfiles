set defsearch=ddg
set hintkeys=asdfghjkl;
set showtabline=never

noremap <space> <C-d>

" disable F1
inoremap <F1> <ESC>
nnoremap <F1> <ESC>
vnoremap <F1> <ESC>

loadplugins buftabs

colorscheme pemees

hi BufTab color: #ee9a00; background: #080808; font-weight: normal;
hi BufTabSelected color: #ee9a00; background: #080808; font-weight: bold;
